@using SSI_WebApp.Data.ViewModels;
@using SSI_WebApp.Data.Enums;
@model NewOrderVM
@{
    ViewData["Title"] = "Create a new Order";
}

@if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h4>@Messages.ES.CreateOrderTitle</h4>
        </div>
        <div class="card-body">
            <form class="user" asp-action="Create" asp-controller="Repair">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        <label asp-for="ComputerBrand" class="label"></label>
                        <select asp-for="ComputerBrand" class="form-control" asp-items="ViewBag.Brands"></select>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="ComputerModel" class="label"></label>
                        <input asp-for="ComputerModel" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="SerialNumber" class="label"></label>
                    <input asp-for="SerialNumber" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="label"></label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ReceptionDate" class="label"></label>
                    <input asp-for="ReceptionDate" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Notes" class="label"></label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info" 0>
                        <i class="fas fa-edit"> Crear nuevo</i>
                    </button>
                    <a class="btn btn-danger float-right" asp-action="Orders" asp-controller="Repair">
                        <i class="fas fa-cancel"> Cancelar</i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
}