@model CreateUserVM;
@{
    ViewData["Title"] = "Admin Login";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Agregar nuevo Admin</h6>
                    </div>
                    <div class="card-body">
                        <form class="user" asp-action="Create" asp-controller="Users">
                            <div class="text-danger">@TempData["Error"]</div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.FullName" class="label"></label>
                                    <input asp-for="@Model.FullName" class="form-control" />
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="@Model.UserName" class="label"></label>
                                    <input asp-for="@Model.UserName" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Email" class="label"></label>
                                <input asp-for="@Model.Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.Password" class="label"></label>
                                <input type="password" asp-for="@Model.Password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.ProfilePicture" class="label"></label>
                                <input asp-for="@Model.ProfilePicture" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="@Model.PhoneNumber" class="label"></label>
                                <input asp-for="@Model.PhoneNumber" class="form-control" />
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.StreetName" class="label"></label>
                                    <input asp-for="@Model.StreetName" class="form-control" />
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="@Model.CityName" class="label"></label>
                                    <input asp-for="@Model.CityName" class="form-control" />
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label asp-for="@Model.StateName" class="label"></label>
                                    <input asp-for="@Model.StateName" class="form-control" />
                                </div>
                                <div class="col-sm-6">
                                    <label asp-for="@Model.ZipCode" class="label"></label>
                                    <input asp-for="@Model.ZipCode" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info">
                                    <i class="fas fa-create"> Crear</i>
                                </button>
                                <a class="btn btn-danger float-right" asp-action="Admins" asp-controller="Users">
                                    <i class="fas fa-cancel"> Cancelar</i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
}
else
{
    <script>
        window.location.href = "@Url.Action("Login")";
    </script>
}