@using SSI_WebApp.Data.ViewModels;
@model UserDisplayVM;
@{

    ViewData["Title"] = "Admin Login";
}

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
  
            <!-- TABLE -->
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Usuarios</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Usuario</th>
                                        <th>Email</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Usuario</th>
                                        <th>Email</th>
                                        <th>Actions</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var n in Model.Users)
                                    {
                                    <tr>
                                        <td>@n.FullName</td>
                                        <td>@n.UserName</td>
                                        <td>@n.Email</td>
                                        <td class="text-center">
                                            <a class="btn btn-circle btn-sm btn-info" asp-action="Details" asp-controller="Users" asp-route-id="@n.Id"><i class="fas fa-info"></i></a>
                                            <a class="btn btn-circle btn-sm btn-danger" asp-action="Delete" asp-controller="Users" asp-route-id="@n.Id"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END TABLE -->

}
else
{
    <script>
        window.location.href = "@Url.Action("Login")";
    </script>
}

